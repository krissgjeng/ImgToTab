{
    "json.schemas": [
        {
            "fileMatch": [
                "/mainfest.json"
            ],
            "url": "http://json.schemastore.org/chrome-manifest"
        }
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": { "when": "$(basename).ts"}
    }
}