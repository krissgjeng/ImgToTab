{
  "manifest_version": 2,

  "name": "ImageinTab",
  "description": "This extension displays all images in one tab.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "downloads"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self' https://*.8ch.net https://*.4chan.org;",
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "background": {
    "scripts": [ "eventscript.js" ],
    "persistent": false
  },
  "options_page": "options.html"
}